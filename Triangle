def minimumTotal(self, triangle):
        if(len(triangle) == 1): return triangle[0][0]
        
        while(len(triangle)>2):
            totals = [0]*(len(triangle[-1])-1)
            for i in range(0,len(totals)):
                totals[i] = min(triangle[-1][i]+triangle[-2][i], triangle[-1][i+1]+triangle[-2][i])
            triangle[-2] = totals
            triangle.pop(-1)
        return min(triangle[1][0]+triangle[0][0], triangle[1][1]+triangle[0][0])
